[*]
indent_style = space
indent_size = 2
tab_width = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 180

[*.ts]
quote_type = single

[*.actions.ts]
max_line_length = 400

[*.reducer.ts]
max_line_length = 400

[*.md]
max_line_length = off
trim_trailing_whitespace = false